<!-- newrestaurant.hbs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Restaurant Form</title>
</head>
<body>
    <h1></h1>
    <form action="/api/restro/new" method="POST">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>
        
        <label for="borough">Borough:</label>
        <input type="text" id="borough" name="borough" required>
        
        <label for="cuisine">Cuisine:</label>
        <input type="text" id="cuisine" name="cuisine" required>
        
        <label for="building">Building:</label>
        <input type="text" id="building" name="address[building]" required>
        
        <label for="street">Street:</label>
        <input type="text" id="street" name="address[street]" required>
        
        <label for="zipcode">Zipcode:</label>
        <input type="text" id="zipcode" name="address[zipcode]" required>
        
        <label for="coord">Coordinates:</label>
        <input type="text" id="coord" name="address[coord][]" placeholder="Longitude" required>
        <input type="text" id="coord" name="address[coord][]" placeholder="Latitude" required>
        
        <label for="grade-date">Grade Date:</label>
        <input type="date" id="grade-date" name="grades[0][date]" required>
        <label for="grade">Grade:</label>
        <input type="text" id="grade" name="grades[0][grade]" required>
        
        <label for="score">Score:</label>
        <input type="number" id="score" name="grades[0][score]" required>
        
        <input type="submit" value="Submit">
    </form>
</body>
</html>
